FROM golang:1.23 AS builder
WORKDIR /app/

#dlv
RUN go install github.com/go-delve/delve/cmd/dlv@latest

COPY . .

RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -gcflags="-N -l" -a -o ./bin/converter ./cmd/converter/main.go


FROM linuxserver/ffmpeg
WORKDIR /app/
COPY --from=builder /app/bin/converter ./bin/converter
COPY --from=builder /go/bin/dlv /

EXPOSE 2345

ENTRYPOINT ["./bin/converter"]